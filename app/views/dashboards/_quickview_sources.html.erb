<div id="dashboard_quickview">
  <h4>Sources</h4>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Avg Time</th>
          <th>Sold</th>
          <th>Unsold</th>
          <th>Unique</th>
          <th>Export</th>
        </tr>
      </thead>
      <tbody>
        <% if current_user.sources.blank? %>
          <tr>
            <td>No sources</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% else %>
          <% current_user.sources.each do |source| %>
            <tr>
              <td><%= link_to source.name, edit_source_path(source.id), remote: true, style: 'color:#1da3ed;' %></td>
              <td>0</td>
              <td><%= number_with_delimiter(source.sold_count) %></td>
              <td><%= number_with_delimiter(source.calls_count - source.sold_count) %></td>
              <td><%= number_with_delimiter(source.calls_count) %></td>
              <td><i class="fa fa-arrow-circle-o-down"></i></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>