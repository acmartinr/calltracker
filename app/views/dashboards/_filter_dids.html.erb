<%= form_for :did_filter, url: filter_dids_path, remote: true do |f| %>
  <div id="filter_dids" role="tablist" aria-multiselectable="true">
    <div class="card card-accordion">
      <div class="card-header" role="tab" id="heading1">
        <h6 class="mb-0">
          <a data-toggle="collapse" data-parent="#filter_dids" href="#collapse2" class="collapsed" aria-expanded="false" aria-controls="collapse2">
            Filter DIDs
          </a>
        </h6>
      </div>
      <div id="collapse2" class="collapse" role="tabpanel" aria-labelledby="collapse2">
        <div class="card-block col-md-6" style="border-width: 0px;">
          <div class="selectOptions">
            <label for='' class="col-form-label">Funnel</label>
            <%= f.collection_select :funnel_id, current_user.funnels, :id, :name, { prompt: 'Select Funnel' }, class: 'form-control select-drop' %>
          </div>
          <div class="selectOptions">
            <label for='' class="col-form-label">Vertical</label>
            <%= f.collection_select :vertical_id, current_user.verticals, :id, :name, { prompt: 'Select Vertical' }, class: 'form-control select-drop' %>
          </div>
          <div class="selectOptions">
            <label for='' class="col-form-label">Destinations</label>
            <%= f.collection_select :campaign_id, current_user.campaigns, :id, :name, { prompt: 'Select Destination' }, class: 'form-control select-drop' %>
          </div>
        </div>
        <div class='row'><br /></div>
        <div class="row form-group col-md-3 float-left">
          <div id='filter_dids_flash_messages'></div>
          <%= button_tag 'submit', class: 'btn btn-primary btn-block', name: 'filter_dids_button', data: { disable_with: "<i class='fa fa-circle-o-notch fa-spin'></i> Filteringâ€¦" } do %>
            <i class="fa fa-circle-o-notch"></i> Filter DIDs
          <% end %>
        </div>
        <div class='row'></div>
      </div>
    </div>
  </div>
<% end %>