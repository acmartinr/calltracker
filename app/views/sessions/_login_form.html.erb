<div id="login_messages">
  <%= render partial: 'flash_messages' %>
</div>
<%= form_for :session, url: login_path, html: { autocomplete: 'on' }, remote: true do |f| %>
  <div class="form-group">
    <label for="">Enter Email</label>
    <%= f.email_field :email, class: 'form-control', autocomplete: 'Username' %>
  </div>
  <div class="form-group">
    <label for="">Password</label>
    <%= f.password_field :password, class: 'form-control', autocomplete: 'current-password' %>
  </div>
  <div class="checkbox">
    <%= f.check_box :remember_me, class: 'checkbox-custom form-check-input' %>
    <label class="checkbox-custom-label form-check-label">
      Remember Me
    </label>          
  </div>
  <div class="form-group">
    <%= button_tag 'submit', class: 'btn btn-primary btn-block', data: { disable_with: "<i class='fa fa-circle-o-notch fa-spin'></i> Log in" } do %>
      <i class="fa fa-circle-o-notch"></i> Log in
    <% end %>
  </div>
<% end %>
<%= button_to 'Forgot Password?', requestreset_url, class: 'btn btn-link btn-block', method: 'get' %>
