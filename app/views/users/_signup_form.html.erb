<%= form_for :user, url: users_path, method: :post, remote: true do |f| %>
  <div class="form-group">
    <label for="">Enter Email</label>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="">Password</label>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Must have at least 8 characters' %>
  </div>
  <div class="form-group">
    <label for="">Confirm Password</label>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Must match your password' %>
  </div>
  <div class="form-group" id="signup_button">
    <%= button_tag 'submit', class: 'btn btn-primary btn-block', data: { disable_with: "<i class='fa fa-circle-o-notch fa-spin'></i> Sign up" } do %>
      <i class="fa fa-circle-o-notch"></i> Sign up
    <% end %>
  </div>
<% end %>